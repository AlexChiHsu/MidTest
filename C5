const input = 2648

const arr = Array.from(input.toString())
let new_arr = []
let answer
for(let i = 0; i < 4; i++) {
    answer = Number(arr[i])
    answer = (answer + 6) % 10
    arr[i] = answer + ''
    for(let j = 3 - i; j === 3 - i; j++) {
        
    }
}

for(let i = 3; i >= 0; i--) {
    for(let j = 3 - i; j === 3 - i; j++) {
        new_arr[j] = arr[i]
    }
}

console.log(new_arr)
