const row = 10

for(let i = 0; i < row; i++) {
    let buffer = ""
    for(let j = 0; j < (2 * row - 1) / 2; j++) {
        if(j >= i) {
            buffer += "*"
        }
        else {
            buffer += " "
        }
    }

    for(let k = ((2 * row - 1) / 2) - 1; k > 0; k--) {
        if(k > i) {
            buffer += "*"
        }
        else {
            buffer += " "
        }
    }
    console.log(buffer)
}
